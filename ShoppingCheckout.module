		$oi = $oi->save();

		$fg = new Fieldgroup();
		$fg->name = 'sc-order';
		$fg->add($this->fields->get('title'));
		$fg->save();

		$t = new Template();
		$t->name = 'sc-order';
		$t->fieldgroup = $fg;
		$t->pageLabelField = 'title';
		$t->parentTemplates = array($admin->id);
		$t->childTemplates = array($oi->id);
		$t = $t->save();

